SRCS = ./main.cpp  \
	   ./Span.cpp  \

CXX = c++
NAME = a.out

CXXFLAGS = -Wall -Wextra -Werror -std=c++11
OBJS = $(SRCS:.cpp=.o)


all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re